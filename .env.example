# Polar.sh Billing Configuration
# Copy this file to .env and fill in your values

# Polar API key for authentication (required)
# Get this from https://polar.sh/settings/api-keys
POLAR_API_KEY=polar_sk_...

# Polar webhook secret for signature verification (required)
# Get this from https://polar.sh/settings/webhooks
POLAR_WEBHOOK_SECRET=whsec_...

# Polar project ID (required)
# Get this from your project settings
POLAR_PROJECT_ID=proj_...

# Optional: Enable/disable billing (defaults to false)
BILLING_ENABLED=true

# Optional: Use Polar sandbox mode for testing
POLAR_SANDBOX=true

# Email/SMTP Configuration for Budget Alerts
# For development, you can use a local SMTP server like MailHog
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USERNAME=
SMTP_PASSWORD=
EMAIL_FROM_ADDRESS=noreply@orzbob.cloud
EMAIL_FROM_NAME=Orzbob Cloud

# GitHub OAuth Configuration
# Get this from https://github.com/settings/developers
GITHUB_CLIENT_ID=Ov23libNOCmmBZNvprW3
GITHUB_CLIENT_SECRET=your-client-secret-here  # Optional for device flow, required for web flow
GITHUB_ORG_NAME=orzbob-cloud  # Optional: restrict to organization members

# Orzbob API Configuration  
ORZBOB_API_URL=http://54.224.5.131  # Production API URL